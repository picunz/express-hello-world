      <img id ="waitingImg" style="display:none;" src="waiting2.gif" alt="this slowpoke moves"  width="50" />
   
     
      <% if (name != "-") { %>
         
         
         <%
            var link = "https://script.google.com/home/projects/" + name + "/edit";
         %>
         <p>Project Id: <%= name %></p> 

         <a href="<%= link %>"> Go to project</a>   
         <br />
         <a href="https://script.google.com/home/usersettings" class="btn btn-primary"> Set Google Apps Script to On</a>   
         <br />
         <a href="/addFiles" class="btn btn-primary"> Add files</a>         
         
      <% } %>

      
      
      
      
      
       
     
  </body>
</html>